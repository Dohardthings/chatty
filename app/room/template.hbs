<h2>This is the Main room</h2>
{{#each model as |post|}}
<span>{{post.createdAt}}</span>
<span>{{post.chatter.username}}</span>
<p>{{post.content}}</p>
{{/each}}


<form {{action postMessage newContent on="submit"}}>
  <h4 class="text-heading">Say Something!</h4>
  {{textarea class="new message" value=newContent}}
  <button>POST</button>
</form>
